<section id="carousal">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            {{#each banner}}
            <li data-target="#carouselExampleIndicators" data-slide-to="{{@index}}" {{#if @first}}class="active"{{/if}}></li>
            {{/each}}
        </ol>
        <div class="carousel-inner">
            {{#each banner}}
            <div class="carousel-item {{#if @first}}active{{/if}}">
                <img class="d-block w-100" src="/banner-images/{{this._id}}.jpg" alt="Banner Image">
            </div>
            {{/each}}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>
<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="itemSection">
                <div class="item">
                    {{!-- <a href="/search?prod={{this.vehicleName}}" class="product-link">{{ this.vehicleName }}</a> --}}

                    <a href="/productdetails/{{this._id}}" class="product-link"> <!-- Added anchor tag here -->
                        <img src="/product-images/{{this._id}}-front.jpg" alt="Card image cap" class="itemImg"
                            width="275px">
                        <div class="product-details">
                            <div class="brand-name">
                                {{vehicleName}}
                            </div>
                            <div class="price-info-sec">
                                <div class="price">â‚¹{{BookingAmount}}</div>
                                <div class="cut-off">&#8377;808</div>
                                <div class="discount-percent">
                                    <span>{{Discount}}% Off</span>
                                </div>
                            </div>
                        </div>
                    </a>
                    {{!-- <button onclick="goToSelectStore('{{this._id}}')" class="btn btn-primary">Add to Cart</button> --}}
                </div>
            </div>
            <!-- Closing anchor tag -->
            <div class="line"></div>
            {{/each}}
        </div>
    </div>
</section>

