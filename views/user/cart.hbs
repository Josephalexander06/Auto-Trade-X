<head>
     <link rel="stylesheet" href="/stylesheets/cart.css">

</head>
<section>
<div class="containe mt-5">
    <div class="card">
        <div class="row">
            <div class="col-md-8 cart">
                <div class="title">
                    <div class="row">
                        <div class="col">
                            <h4><b>Shopping Cart</b></h4>
                        </div>
                        {{!-- <div class="col align-self-center text-right text-muted">3 items</div> --}}
                    </div>
                </div>
                <div class="row border-top border-bottom">
                    {{#each products}}
                    <div class="row main align-items-center">
                        
                        <div class="col-2"><img class="img-fluid" src="/product-images/{{this.product._id}}.jpg"
                                 style="height: 70px;width:70px" alt=""></div>
                        <div class="col">
                            <div class="row text-muted">Vehcile</div>
                            <div class="row">{{this.product.productName}}</div>
                        </div>
                        <div class="col">
                            <a class="cart-item-count mr-3"
                                onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',-1)">-</a>
                            <span id="{{this.product._id}}">{{this.quantity}}</span>
                            <a class="cart-item-count ml-3"
                                onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',1)">+</a>
                        </div>
                        <div class="col"> {{this.product.sellingPrice}}
                             <span class="close" onclick="deleteQuantity('{{this._id}}', '{{this.product._id}}')">&#10005; 
                                </span>
                        </div>
                       
                    </div>
                     {{/each}}
                </div>
                <div class="back-to-shop"><a href="/">&leftarrow;<span class="text-muted">Back to shop</span></a></div>
            </div>
            <div class="col-md-4 summary">
                <div>
                    <h5><b>Summary</b></h5>
                </div>
                <hr>
                <div class="row">
                    <div class="col" style="padding-left:0;">ITEMS :{{totalQuantity}}</div>
                    <div class="col text-right">₹ {{totalValue}} </div>
                </div>
                <form>
                    <p>SHIPPING</p>
                    <select>
                        <option class="text-muted">Standard-Delivery- ₹FREE</option>
                    </select>
                    <p>GIVE CODE</p>
                    <input id="code" placeholder="Enter your code">
                </form>
                <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                    <div class="col">TOTAL PRICE</div>
                    <div class="col text-right" id="total">₹ {{totalValue}}</div>
                </div>
                <a href="/place-order" class="btn btn-success mt-3" style="width: 100%;"><b>CHECKOUT</b></a>

            </div>
        </div>
    </div>
</div>
</section>
