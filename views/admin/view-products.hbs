<section>
  <div class="container">
    <div class="row mt-4">
        <a href="/admin/add-product" class="btn btn-success ml-auto">Add products</a>
    </div>
    <table class="table table-bordered mt-5">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th>image</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.productName}}</td>
          <td>{{this.productCategory}}</td>
          <td>{{this.productDescription}}</td>
          <td><img src="/product-images/{{this._id}}.jpg" style="height: 50px;width:50px" alt=""></td>
          <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete-product/ {{this._id}} " class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.productName}}?')">Delete</a>
            </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>