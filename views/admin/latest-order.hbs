<!-- order.hbs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Orders</title>
  <!-- Add any CSS files or stylesheets -->
</head>
<body>
  <h1>Latest Orders</h1>
   <table>
    <thead>
      <tr>
        <th>Index</th>
        <th>Order ID</th>
        <th>Customer Name</th>
        <th>Product Name</th>
        <th>Order Date</th>
        <th>Total Amount</th>
        <th>Status</th>
      </tr>
    </thead>

    <tbody>
  {{#each orders}}
  <tr>
    <td>{{@index}}</td>
    <td>{{this._id}}</td>
    <td>{{this.user.fname}}</td> 
    {{#each this.products}}
    <td>{{this.name}}</td>
    <td>{{this.date}}</td>
    <td>{{this.totalAmount}}</td>
    {{/each}}
    <td>{{this.status}}</td>
  </tr>
  {{/each}}
</tbody>

  </table>
</body>
</html>


<style>
    /* admin-orders.css */

/* Reset default browser styles */
body, h1, table {
  margin: 0;
  padding: 0;
}

/* Set a default font family and font size */
body {
  font-family: Arial, sans-serif;
  font-size: 14px;
}

/* Style the header */
h1 {
  text-align: center;
  margin-top: 20px;
  margin-bottom: 20px;
}

/* Style the table */
table {
  width: 100%;
  border-collapse: collapse;
}

/* Style table headings */
th {
  background-color: #f2f2f2;
  padding: 10px;
  text-align: left;
}

/* Style table data cells */
td {
  border-bottom: 1px solid #ddd;
  padding: 10px;
}

/* Style alternating rows */
tr:nth-child(even) {
  background-color: #f9f9f9;
}

</style>