    border-radius: 4px;
  }

  .btn-success {
    background-color: #28a745;
    border-color: #28a745;
  }

  .btn-block,
  .btn-blocked {
    width: 100px;
  }

  .btn-blocked {
    background-color: #dc3545;
    border-color: #dc3545;
  }

  .table {
    width: 100%;
    border-collapse: collapse;
  }

  .table th,
  .table td {
    border: 1px solid #dee2e6;
    padding: 8px;
  }

  .table th {
    background-color: #f8f9fa;
    color: #212529;
    font-weight: bold;
    text-align: left;
  }
</style>