<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Seller Users</title>
  <!-- Add JavaScript to handle confirmation dialogs -->
  <script>
    function confirmBlock() {
      return confirm('Are you sure you want to block this user?');
    }

    function confirmUnblock() {
      return confirm('Are you sure you want to unblock this user?');
    }
  </script>
</head>

<body>
  <section>
    <div class="container">
      <div class="row mt-4">
        <a href="/admin/admin-view" class="btn btn-success">Back</a>
      </div>
      <table class="table mt-4">
        <thead>
          <tr>
            <th scope="col">Index</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Block/Unblock</th>
          </tr>
        </thead>
        <tbody>
          {{#each sellers}}
          <tr>
            <td>{{@index}}</td>
            <td>{{this.sname}}</td>
            <td>{{this.semail}}</td>
            <td>
              {{#if this.isBlocked}}
              <!-- Show "Unblock" button if isBlocked is true -->
              <a href="/admin/seller-unblock/{{this._id}}" class="btn btn-blocked"
                onclick="return confirmUnblock();">Unblock</a>
              {{else}}
              <!-- Show "Block" button if isBlocked is false -->
              <a href="/admin/seller-block/{{this._id}}" class="btn btn-block" onclick="return confirmBlock();">Block</a>
              {{/if}}
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </section>
</body>

</html>



<style>
  /* admin.css */

  body {
    font-family: Arial, sans-serif;
  }

  .container {
    width: 80%;
