<section>
  <div class="container mt-4">
    <div class="row">

      <!-- Add Product Form -->
      <h2 class="text-center">Add New Product</h2>
      <form action="/admin/add-product" method="post" enctype="multipart/form-data">
        <br><br>

        <label for="productName">Product Name:</label>
        <input type="text" class="form-control" id="productName" name="productName" required>

        <label for="originalPrice">Original-Price</label>
        <input type="text" class="form-control" id="originalPrice" name="originalPrice" required>

        <label for="sellingPrice">Selling-Price:</label>
        <input type="text" class="form-control" id="sellingPrice" name="sellingPrice" required>
        <br>

        <label for="dicountPrecentage">Discount-Precentage:</label>
        <textarea class="form-control" id="discountPrecentage" name="discountPrecentage" required></textarea>

        <label for="productImage">Image:</label>
        <input type="file" class="form-control" id="productImage" name="Image" required>

        <button type="submit" class="btn btn-primary">Add Product</button>
      </form>
    </div>
  </div>
</section>
